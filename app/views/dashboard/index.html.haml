.d-flex.flex-column.justify-content-between(style="height: calc(100vh);")
  .d-flex.flex-column.justify-content-between
    - @forecasts.each do |forecast|
      .d-flex.flex-row(style="height: calc((100vh - 100px) / 3);")
        .main-view.p-4.text-center(style="min-width: 200px;")
          .display-1
            = forecast.date.to_s(:day)
          .fs-6
            = forecast.date.to_s(:forecast)
          .d-flex.flex-column
            %div(style="font-size: 4rem;")
              %i.bi(class="bi-#{forecast_icon(forecast)}")
            .d-flex.flex-row.justify-content-center
              - if forecast.breakdown
                %i.bi.pe-1(class="bi-#{breakdown_icon(forecast.breakdown.morning)}")
                %i.bi.pe-1(class="bi-#{breakdown_icon(forecast.breakdown.afternoon)}")
                %i.bi.pe-1(class="bi-#{breakdown_icon(forecast.breakdown.evening)}")
                %i.bi(class="bi-#{breakdown_icon(forecast.breakdown.overnight)}")
          - if @debug
            %small
              = forecast.condition
        .temperatures.d-flex.flex-column.justify-content-center
          .d-flex.flex-row.align-center
            %div(style="font-size: 2rem;")
              %i.bi.bi-thermometer-high
            .d-flex.flex-column.justify-content-center.ps-2
              = forecast.detail.high_temp
              째C
          .d-flex.flex-row.align-center
            %div(style="font-size: 2rem;")
              %i.bi.bi-thermometer-low
            .d-flex.flex-column.justify-content-center.ps-2
              = forecast.detail.low_temp
              째C
          .d-flex.flex-row.align-center
            %div(style="font-size: 2rem;")
              %i.bi.bi-sunrise
            .d-flex.flex-column.justify-content-center.ps-2
              = forecast.detail.sunrise.to_s(:sunrise)
          .d-flex.flex-row.align-center
            %div(style="font-size: 2rem;")
              %i.bi.bi-sunset
            .d-flex.flex-column.justify-content-center.ps-2
              = forecast.detail.sunset.to_s(:sunrise)
        .details.p-4.d-flex.flex-column.justify-content-center
          = forecast.detail.details
  .text-center.details.p-4.d-flex.flex-column.justify-content-center(style="height: 100px")
    %small=scrub_character(@joke)


